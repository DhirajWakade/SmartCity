<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

>
    <androidx.cardview.widget.CardView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_6sdp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >


                <LinearLayout
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:orientation="vertical"
                >
                    <TextView
                            android:id="@+id/txt_business_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:text="Apple MacBooerra)"
                            android:textColor="#000000"
                    />


                    <TableRow
                            android:id="@+id/table_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/txt_pancard_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:textSize="@dimen/_10sdp"
                                android:text="Apple MacBooierra)"

                        />


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_5sdp"


                                android:textSize="@dimen/_10sdp"
                                android:text=" | "

                                android:layout_marginStart="@dimen/_3sdp"/>

                        <TextView
                                android:id="@+id/txt_gst_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"

                                android:textSize="@dimen/_10sdp"
                                android:text="Apple )"

                                android:layout_marginStart="@dimen/_3sdp"/>
                    </TableRow>
                </LinearLayout>
                <LinearLayout

                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp">

                    <ImageView
                            android:id="@+id/btn_add_product"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:checked="true"
                            android:background="@drawable/ic_add_black_24dp_primarycolor"
                            android:layout_marginStart="@dimen/_5sdp"/>


                    <ImageView
                            android:id="@+id/btn_edit_business"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:checked="true"
                            android:background="@drawable/ic_edit_white_24dp"
                            android:layout_marginStart="@dimen/_5sdp"/>


                </LinearLayout>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/light_gray"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="IFSC Code "

                />


                <TextView

                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text=" : "

                />

                <TextView
                        android:id="@+id/txt_ifsc_code"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Apple )"

                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
            >


                <TextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Bank"

                />


                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text=" : "

                />

                <TextView
                        android:id="@+id/txt_bank_name"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Apple )"

                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

            >

                <TextView

                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Account No"

                />


                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text=" : "

                />

                <TextView
                        android:id="@+id/txt_account_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Apple )"
                        android:layout_marginStart="@dimen/_3sdp"/>
            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/light_gray"/>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="Home Decore"

                />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>