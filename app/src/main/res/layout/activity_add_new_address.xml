<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:id="@+id/card_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Address  "
                android:textSize="@dimen/_16sdp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Add new address for delivery "
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/edtAddressNewAddress1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:background="@drawable/edit_border"

                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_ "
                android:hint="Address line 1 (Max 35 char)"
                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_12sdp"

                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/edtAddressNewAddress2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:background="@drawable/edit_border"

                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_ "
                android:hint="Address line 2 (Max 35 char)"
                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_12sdp"

                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/layoutlocality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <EditText
                        android:id="@+id/edtPinNewAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"


                        android:background="@drawable/edit_border"
                        android:digits="1234567890"
                        android:hint="Pin Code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_12sdp"

                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnVerify"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/btn_green_light_border"
                        android:text="Verify PIN"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>


            <EditText
                android:id="@+id/edtCityNewAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_border"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"

                android:hint="City"

                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_12sdp"

                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/edtStateNewAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_border"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"

                android:hint="State"

                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:paddingLeft="@dimen/_12sdp"

                android:textSize="@dimen/_14sdp" />


            <Button
                android:id="@+id/btnSaveNEwAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/btn_border"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>


